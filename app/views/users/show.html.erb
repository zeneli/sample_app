<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
      <br>
      <h2><%= @user.email %></h2>
      <br>
      <p>
        User since: <%= @user.created_at %>
        <br>
        Last updated: <%= @user.updated_at %>
      </p>
      <p>
        Now: <%= Time.now %>
      </p>
    </section>
  </aside>
</div>
